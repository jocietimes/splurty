<!DOCTYPE html>
<html>
  <head>
    <title>Splurty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="row">
    <div class="col-3">
      <div class="circle">
        <br />
        TOTALLY
        <br />
        USELESS
        <br />
        INFO
      </div>
    </div>
    <div class="col-4 slogan">
      Splurting out movie quotes since 2020
    </div>
    <div class="col-5 links">
      <%= link_to 'contribute', '#' %>
      <%= link_to 'about', '#' %>
    </div>
    </header>

    <hr />

    <br class="clear" />

    <%= yield %>
  </body>
</html>
